
page{
    background-color: #F2F3F7;
}
.coupon_container {
    display: flex;
    flex-direction: column;
}

.tips {
    height:120rpx;
    display: flex;
    flex-direction: row;
    background: #FFF;
    align-items: center;
    padding: 0 40rpx;
    /* justify-content: center; */
}
.tips .tips_titck{
    font-size:28rpx;
    font-weight:400;
    color:#333333;
}

.tips .tips_titck text {
    color: #EE4C75;
}
.line{
    height: 20rpx;
    background-color: #F2F3F7;
}
.coupon_list {
    width: 100%;
    height: 478rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 60rpx; 
    background-color: #FFFFFF;
    box-sizing: border-box;
}
.coupon_input{
    width: 260rpx;
    height: 80rpx;
    display: flex;
    border-radius:6rpx;
    align-items: center;
    border:2rpx solid #CCCCCC;
    margin-bottom: 120rpx;
}
.coupon_input .minus{
    width:55rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color:#EE4C75;
    border-radius:0;
    border-right: 2rpx solid #CCCCCC;
    padding-left:18rpx;
    font-size: 40rpx;
}
.coupon_input input{
    width:150rpx;
    text-align: center; 
}
.coupon_input .plus{
    width:55rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color:#EE4C75;
    border-left: 2rpx solid #CCCCCC;
    border-radius:0;
    padding-left:18rpx;
    font-size: 40rpx;
}
.coupon_input button::after{
    border:none;
}
.subtract{
    font-size:28rpx;
    font-weight:400;
    color:#333333;
    margin-bottom: 20rpx;
}
.subtract text{
    color:#EE4C75;
    font-size: 36rpx;
    padding-left: 10rpx;
}
.btn image{
    width:670rpx;
    height: 98rpx;
}