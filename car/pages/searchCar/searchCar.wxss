.search-car-container {
    width: 100%;
}

.topColor {
    background-color: #ee4c75;
    height: 200rpx;
    position: relative;
}

.search-car-input-num {
    position: absolute;
    top: 0;
    left: 0;
    border-top-right-radius: 6rpx;
    border-top-left-radius: 6rpx;
    height: 100rpx;
    background-color: #fff;
    width: 670rpx;
    box-sizing: border-box;
}

.search-car-input {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    top: 70rpx;
    left: 40rpx;
    right: 40rpx;
}
.welcome {
    color: #999;
    font-size: 24rpx;
    font-weight: 400;
    margin-top: 242rpx;
    margin-left: 220rpx;
}

.search-car-input-history {
    background-color: #fff;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 586rpx;
    border: 2rpx #d9d9d9 solid;
    padding: 0 40rpx;
}

.add-car-bind {
    width: 670rpx;
    height: 88rpx;
    margin-top: 24rpx;
    margin-left: 40rpx;
    background-color: #ee4c75;
    display: flex;
    border-radius: 100rpx;
    align-items: center;
    justify-content: center;
}

.add-car-bind text {
    font-size: 36rpx;
    font-weight: 500;
}

.select {
    box-sizing: border-box;
    width: 100%;
    height: 100rpx;
    border: 1px solid #efefef;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    padding: 0 40rpx;
}

.select_text {
    font-size: 30rpx;
    flex: 1;
}