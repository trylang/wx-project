/* dialogComponent.wxss */

.wx-mask {
    position: fixed;
    z-index: 100;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
}

.wx-dialog {
    position: fixed;
    z-index: 200;
    width: 650rpx;
    max-width: 650rpx;
    max-height: 850rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #fff;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 32rpx;
}

.dialog-title {
    margin: 80rpx 0 40rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dialog-title text {
    color: #000;
    font-size: 30rpx;
    font-weight: 500;
}

.dialog-grouplist {
    font-size: 36rpx;
    margin-bottom: 16rpx;
}

.scroll {
    height: 320rpx;
    width: 100%;
}

.collage-item {
    display: flex;
    flex-direction: row;
    height: 144rpx;
    border-top: 2rpx #eee solid;
    align-items: center;
    width: 100%;
}

.collage-item image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
}

.collage-desc {
    display: flex;
    flex-direction: column;
    margin-left: 16rpx;
}

.collage-desc .name {
    font-size: 30rpx;
}

.collage-desc .sub {
    font-size: 24rpx;
    color: #999;
    margin-top: 8rpx;
}

.collage-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f21b7b;
    border-radius: 40rpx;
    height: 56rpx;
    width: 140rpx;
    margin-left: auto;
}

.collage-btn text {
    color: #fff;
    font-size: 24rpx;
    font-weight: 500;
}

.dialog-close {
    position: absolute;
    z-index: 201;
    top: 40rpx;
    right: 40rpx;
    width: 28rpx;
    height: 28rpx;
}
