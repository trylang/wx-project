.detail {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
}

.banner {
    width: 100%;
    height: 360rpx;
}

.detail .main {
    font-weight: 500;
    font-size: 36rpx;
    margin: 40rpx 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.detail .price {
    color: #F21B7B;
    font-size: 36rpx;
    margin-left: 32rpx;
}

.detail .result {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx;
}

.detail .result .user {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.detail .result .user .item {
    display: flex;
    align-items: center;
    margin-right: 16rpx;
    overflow: auto;
}

.detail .result .user .item .img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.detail .result .time {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 24rpx 0 40rpx 0;
}

.detail .result .time{
    font-size: 24rpx;
}

.detail .result .time .cutdown {
    width: 44rpx;
    height: 32rpx;
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #fff;
    font-weight: 500;
    margin:0 4rpx;
}

.detail .result .share{
    font-size: 36rpx;
    color: #fff;
    background: #F21B7B;
    font-weight: 500;
    border-radius: 100rpx;
    padding: 20rpx 92rpx;
}


.detail .rule{
    display: flex;
    flex-direction: column;
    padding: 32rpx;
    border-top: 16rpx #eee solid;
}

.detail .rule text{
    font-size: 24rpx;
}
.detail .rule .ruleNum{
    color:red;
}
.detail .rule .title{
    font-size: 30rpx;
    font-weight: 500;
    margin-bottom: 12rpx;
}


.go-home {
    position: fixed;
    right: 15rpx;
    top: 60%;
    width: 100rpx;
    height: 103rpx;
}

.go-home-hide {
    position: fixed;
    right: 0;
    top: 60%;
    transform: translate(50%, 0);
    width: 100rpx;
    height: 103rpx;
    opacity: 0.5;
}
