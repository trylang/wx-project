page {
    height: 100%;
}

.container {
    display: flex;
    justify-content: flex-start;
}

.top-info {
    margin-top: 166rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.top-info image {
    width: 192rpx;
    height: 262rpx;
}

.top-info text {
    margin-top: 24rpx;
    margin-left: 22rpx;
    color: #F21B7B;
    font-size: 32rpx;
}

.top-info .fail {
    color: #ccc;
}

.buttons {
    margin-top: 168rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.button-common {
    width: 440rpx;
    height: 100rpx;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
}

.button-common.level1 {
    background: #F21B7B;
    color: white;
}

.button-common.level2 {
    margin-top: 44rpx;
    color: #F21B7B;
    border-width: 2rpx;
    border-style: solid;
    border-color: #F21B7B;
}

.checkorder {
    margin-top: 48rpx;
    color: #333;
    font-size: 32rpx;
    text-decoration: underline;
}
