/* dialogComponent.wxss */

.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.wx-dialog {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 10px;
  overflow: hidden;
}

.dialog-icon{
  width:100rpx;
  margin-top: 80rpx;
}

.wx-dialog-msg{
  color:#000;
  font-size: 36rpx;
  font-weight: 500;
}

.wx-dialog-btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 400rpx;
}

.wx-dialog-ok {
  display: flex;
  flex-direction: column;
  border: 1rpx #EE4C75 solid;
  border-radius: 36rpx;
  background-color: #EE4C75;
  width: 176rpx;
  height: 72rpx;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.wx-dialog-cancle {
  display: flex;
  flex-direction: column;
  border: 2rpx #EE4C75 solid;
  border-radius: 36rpx;
  background-color: #fff;
  width: 176rpx;
  height: 72rpx;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.wx-dialog-cancle text{
  font-size: 30rpx;
  color: #EE4C75;
  font-weight: 500;
}

.wx-dialog-ok text {
  font-size: 30rpx;
  color: #fff;
  font-weight: 500;
}