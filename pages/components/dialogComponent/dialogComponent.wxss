/* dialogComponent.wxss */

.wx-mask {
    position: fixed;
    z-index: 100;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
}

.wx-dialog {
    position: fixed;
    z-index: 200;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #fff;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dialog-title {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dialog-title-content {
    margin-top: 131rpx;
    height: 164rpx;
    justify-content: center;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dialog-title-content .content {
    color: #333;
    font-size: 36rpx;
    font-weight: 500;
}

.dialog-title-content .desc {
    color: #999;
    font-size: 30rpx;
    margin-top: 8rpx;
}

.dialog-title .btnrow {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 480rpx;
    margin-bottom: 80rpx;
    justify-content: space-between;
}

.cancle {
    width: 200rpx;
    height: 72rpx;
    border: 2rpx #EE4C75 solid;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #EE4C75;
    font-size: 30rpx;
    font-weight: 500;
}

.okbtn {
    width: 200rpx;
    height: 72rpx;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #EE4C75;
    color: #fff;
    font-size: 30rpx;
    font-weight: 500;
}

.dialog-image {
    position: fixed;
    left: 50%;
    top: 95rpx;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    width: 112rpx;
    height: 112rpx;
    z-index: 300;
}
