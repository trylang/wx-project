    text-align: center;
}
.get_word{
    margin-top:60rpx;
    font-size: 26rpx;
    text-indent:30rpx;
}
.get_bts_c{
    position: absolute;
    width:100%;
    bottom:40rpx;
    left:0rpx;
    display: flex;
    line-height: 60rpx;
    height: 60rpx;
    border-top: 2rpx solid #eee;
}
.get_bts_a{
    background-color: #1aad19;
    color:white;
    margin:0rpx 40rpx;
    height: 60rpx;
    line-height: 60rpx;
    flex: 1;
    text-align: center;
}
.get_bts_b{
    margin:0rpx 40rpx;
    flex: 1;
    text-align: center;
    border-right: 2rpx solid #eee;
}
.getAvatarUrlBox{
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1;
}
.getAvatarUrlBox .backColor{
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 2;
}
.getAvatarUrl{
    width: 520rpx;
    /* height: 446rpx; */
    position: relative;
    z-index: 100;
    top: 230rpx;
    left: 116rpx;
    display: block;
    background-color: white;
    border-radius: 10rpx;
    text-align: center;
}
.getAvatarUrl .title{
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    border-bottom: 2rpx solid #eee;
    height: 91rpx;
    line-height: 91rpx;
    margin-top: 0;
    margin-bottom: 20rpx;
}
.getAvatarUrl .avatarLogo{
    width: 84rpx;
    height: 84rpx;
    display: block;
    border-radius: 42rpx;
    margin: 0 auto;
}
.getAvatarUrl .titleDesc{
    color: #000;
    font-size: 28rpx;
    font-weight: 400;
    height:65rpx;
    line-height:65rpx;
}
.getAvatarUrl .get_info{
    font-size:24rpx;
    font-weight:400;
    color: #888;
    border-top: 2rpx solid #eee;
    height:86rpx;
    line-height:86rpx;

}
.getAvatarUrl .avatarFooter{
    width: 100%;
    display: flex;
    border-top: 2rpx solid #eee;
    height: 85rpx;
    line-height: 85rpx;
    overflow: hidden;
}
.getAvatarUrl .avatarFooter .footer_a{
    display: inline-block;
    text-align: center;
    width: 234rpx;
    border-right: 2rpx solid #eee;
    font-size:28rpx;
}
.getAvatarUrl .avatarFooter .footer_b{
    background-color:#fff;
    color: #02BB00;
    text-align: center;
    display: inline-block;
    width: 280rpx;
    border: none;
    /* position:static; */
    font-size:28rpx;
    height: 85rpx;
    line-height: 85rpx;
    
}
.getAvatarUrl .avatarFooter .footer_b::after {
    border: none;
}