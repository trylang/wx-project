.get_avatarUrl{
    position: fixed;
    height: 300rpx;
    width:550rpx;
    left:100rpx;
    bottom:470rpx;
    display: block;
    background-color: white;
    box-shadow: 0rpx 0rpx 5rpx 5rpx #ccc;
    border-radius: 5rpx;
}
.get_close{
    position:absolute;
    top:20rpx;
