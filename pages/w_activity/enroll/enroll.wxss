 @import "../../components/calendar/index.wxss"; 
.enroll-date{
	margin: 0 32rpx;
	background: #F5F5F5;
	padding: 26rpx 32rpx 24rpx;
	display: flex;
}
.enroll-container{
	padding-bottom: 130rpx;
}
.date-image{
	width: 32rpx;
	height: 28rpx;
	margin-right:16rpx;
}
.time-image{
	width: 30rpx;
	height: 30rpx;
	margin-right:16rpx;
}
.picker{
	display: inline;
	color: #000;
	font-size: 30rpx;
	vertical-align: top;
}
.section{
	display: flex;
	flex: 1;
}
.picker-item{
	vertical-align: middle;
}
.choice-condition{
	background: #f5f5f5;
}
.choice-ticket{
	background: #fff;
	padding: 44rpx 32rpx;
	margin-bottom: 16rpx;
}
.choice-title{
	padding: 16rpx 0 32rpx;
	border-bottom: 1rpx solid #F5F5F5;
	font-size: 30rpx;
}
.ticket-title{
	font-size: 30rpx;
	padding-right: 16rpx;
	line-height: 38rpx;
	padding-top: 32rpx;
}
.buy-ticket{
	font-size: 24rpx;
	color: #999;
	line-height: 32rpx;
}
.small-title{
	font-size: 24rpx;
	color: #999;
	line-height: 32rpx;
	margin-top: 8rpx;
}
.add-number{
	display: flex;
}
.reduce-image{
	width: 24rpx;
	height: 4rpx;
	margin-top: 24rpx;
}
.add-image{
	width: 24rpx;
	height: 24rpx;
	margin-top: 14rpx;
}
.add-image-content{
	width: 48rpx ;
	height: 48rpx;
	text-align: center;
}
.price-number{
	display: flex;
	justify-content: space-between;
	line-height: 38rpx;
	margin-top: 38rpx;
}
.number-input{
	width: 80rpx;
	height: 48rpx;
	line-height: 48rpx;
	margin: 0 24rpx;
	background: #f5f5f5;
	font-size: 30rpx;
	text-align: center;
}
.pre-price{
	font-size: 22rpx;
	color: #F21B7B;
}
.price{
	font-size: 26rpx;
}
.enroll-info{
	background: #fff;
	padding: 40rpx 32rpx;
}
.enroll-item{
	display: flex;
	line-height: 100rpx;
	border-bottom: 1rpx solid #f5f5f5;
	justify-content: space-between;
}
.enroll-label{
	font-size: 30rpx;
	line-height: 100rpx;
	flex: 1;
}
.enroll-input{
	height: 100rpx;
	width: 420rpx;
}
.bottom-btn{
	position: fixed;
	display: flex;
	bottom: 40rpx;
	height: 88rpx;
	width: 640rpx;
	margin: 0 auto;
	border-radius: 44rpx;
	color: #fff;
	z-index: 999;
	left: 56rpx;
	line-height: 88rpx;
}
.bottom-price{
	width: 400rpx;
	background: #473D3F;
	font-size: 24rpx;
	padding-left: 50rpx;
	box-sizing: border-box;
	border-radius: 44rpx 0 0 44rpx;

}
.ticket-item-active{
	background: #efefef;
}
.ticket-item{
	padding: 0 20rpx;
	padding-bottom: 20rpx;
}
.bottom-enroll{
	flex: 1;
	background: #F21B7B;
	text-align: center;
	border-radius: 0 44rpx 44rpx 0 ;
	font-size: 36rpx;
}
.bottom-num-price{
	font-size: 30rpx;
}
.dialog-calendar{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
}
.cover-modal{
	width: 100%;
	height: 100%;
	min-height: 1500rpx;
	position: absolute;
	z-index: 10;
	left: 0;top: 0;
	background: rgba(0,0,0,.2);
}
.comment-write{
	justify-content: space-between;
	width: 100%;
	padding: 0 32rpx;
	z-index: 999;
	position: fixed;
	box-sizing: border-box;
	background: #fff;
	bottom: 0;
}