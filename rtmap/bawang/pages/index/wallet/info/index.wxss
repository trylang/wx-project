page{
	background: #383747;
}
.coupon{
	width: 100%;
	height: 480rpx;
	position: relative;
}
.coupon .backend{
	width: 750rpx;
	height: 616rpx;
	margin: 0 auto;
	position: absolute;
	top: 100rpx;
	left: 0;
}
.coupon .couponend{
	width: 590rpx;
	margin-left: -295rpx;
	position: absolute;
	top: 200rpx;
	left: 50%;
}
.coupon .couponend .title{
	color: #ff4d4d;
	font-size: 50rpx;
	background: #ffdf6e;
	border-top-left-radius: 12rpx;
	border-top-right-radius: 12rpx;
	padding-top: 20rpx;
	text-align: center;
}
.coupon .couponend .inset{
	width: 590rpx;
	height: 38rpx;
	font-size: 0;
	line-height: 0;
	overflow: hidden;
}
.coupon .couponend .inset > image{
	width: 100%;
	height: 40rpx;
}
.coupon .couponend .compose{
	height: 540rpx;
	background: #fff;
}
.coupon .couponend .qrcode{
	height: 260rpx;
	padding: 20rpx 0;
}
.coupon .couponend .qrcode > canvas{
	width: 260rpx;
	height: 260rpx;
	margin: 0 auto;
}
.coupon .couponend .qrcodeNum{
	font-size: 35rpx;
	color: #353535;
	line-height: 60rpx;
	text-align: center;
}
.coupon .couponend .qrcodeTip{
	font-size: 24rpx;
	color: #949494;
	text-align: center;
}
.coupon .frontend{
	width: 690rpx;
	position: absolute;
	top: 100%;
	left: 32rpx;
}
.coupon .frontend .triangle{
	width: 100%;
	height: 86rpx;
	overflow: hidden;
	position: absolute;
	top: -83rpx;
	left: 0;
}
.coupon .frontend .triangle .left{
	width: 345rpx;
	height: 86rpx;
	background: linear-gradient(-14.5deg, #fc5955, #f85552);
	-webkit-transform-origin: top left;
	transform-origin: top left;
	-webkit-transform: rotate(14.5deg);
	transform: rotate(14.5deg);
	position: absolute;
	top: 0;
	left: 0;
}
.coupon .frontend .triangle .right{
	width: 345rpx;
	height: 86rpx;
	background: linear-gradient(14.5deg, #fc5955, #f85552);
	-webkit-transform-origin: top right;
	transform-origin: top right;
	-webkit-transform: rotate(-14.5deg);
	transform: rotate(-14.5deg);
	position: absolute;
	top: 0;
	right: 0;
}
.coupon .extend{
	width: 690rpx;
	background: linear-gradient(180deg, #f95552, #e33941);
	border-bottom-left-radius: 12rpx;
	border-bottom-right-radius: 12rpx;
	margin-bottom: 100rpx;
	position: relative;
	top: 100%;
	left: 32rpx;
}
.coupon .extend:before{
	content: "";
	display: block;
	clear: both;
	overflow: hidden;
}
.coupon .extend .logo{
	width: 110rpx;
	height: 110rpx;
	background: #fff;
	border: #ffdc39 8rpx solid;
	border-radius: 50%;
	margin-left: -55rpx;
	-webkit-box-shadow: 0 6rpx 16rpx #dd4a49;
	box-shadow: 0 6rpx 16rpx #dd4a49;
	position: absolute;
	top: -65rpx;
	left: 50%;
}
.coupon .extend .content{
	width: 90%;
	min-height: 400rpx;
	font-size: 26rpx;
	margin: 0 auto;
	padding-top: 70rpx;
}
.coupon .extend .content .title{
	color: #fff;
	font-size: 36rpx;
	line-height: 110rpx;
	text-align: center;
}
.coupon .extend .content .btnGetCoupon{
	color: #aa2b25;
	font-size: 32rpx;
	line-height: 90rpx;
	background: #fbdc4a;
	border-radius: 90rpx;
	-webkit-box-shadow: 6rpx 6rpx 16rpx #dd4a49, 0 0 12rpx #fff inset;
	box-shadow: 6rpx 6rpx 16rpx #dd4a49, 0 0 12rpx #fff inset;
	text-align: center;
	display: none;
}
.coupon .extend .content .desc{
	color: #fff;
	line-height: 50rpx;
	border-top: #d43538 solid 1px;
	margin-top: 44rpx;
	padding: 22rpx 44rpx;
}
.coupon .extend .content .desc .infoBlock{
	-webkit-display: flex;
	display: flex;
}
.coupon .extend .content .desc .infoBlock .label{
	width: 130rpx;
}
.coupon .extend .content .desc .infoBlock .info{
	-webkit-flex: 1;
	flex: 1;
}

.coupon .couponend canvas{
	display: none;
}
.coupon.canGet .extend .content .btnGetCoupon,
.coupon.resolve .couponend canvas,
.coupon.final .couponend canvas{
	display: block;
}
.coupon.final{
	height: 720rpx;
}
.coupon.final .backend{
	top: 340rpx;
}
.coupon.final .couponend{
	top: 50rpx;
}


