/* components/coupon-tags/coupon-tags.wxss */
.coupon-tags {    
    display: flex;
    flex-flow: row wrap;
}

.coupon-tag {
    margin-top: 6rpx;
    margin-right: 30rpx;
    display: flex;
}
.coupon-tag:last-child{
    margin-right: 0;
}
.coupon-tag-title{
    width: 32rpx;
    height: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-width: 1rpx;
    border-style: solid;
    font-size: 20rpx;
}
.coupon-tag-title.limit{
    color: #F21B7B;
    border-color: #F21B7B;
}

.coupon-tag-title.return{
    color: #37AB3B;
    border-color: #37AB3B;
}

.coupon-tag-description{
    margin-left: 12rpx;
    color: #999;
    font-size: 24rpx;
}