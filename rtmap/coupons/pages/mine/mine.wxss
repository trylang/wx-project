/* pages/mine/mine.wxss */

.container {
    background: #f5f5f5;
}

.banner {
    width: 750rpx;
    height: 250rpx;
    position: relative;
    background: white;
    margin-bottom: 16rpx;
}

.banner-bg {
    width: 100%;
    height: 100%;
}

.banner-head {
    /* margin-top: 22rpx; */
    position: absolute;
    width: 100%;
    top: 22rpx;
    left: 0;
}
.head_tolog{    
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.head-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.banner-head text {
    margin-top: 16rpx;

    color: #fff;
    font-size: 30rpx;
}

.banner-head-login {
    position: absolute;
    width: 100%;
    top: 40rpx;
    left: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.login-head {
    margin-left: 68rpx;
}

.membership-info {
    margin-left: 14rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.membership-info-top {
    display: flex;
    align-items: center;
}

.membership-info-top text {
    color: white;
    font-size: 36rpx;
    line-height: 50rpx;
    font-weight: 500;
    margin-right: 16rpx;
}

.membership-level {
    height: 40rpx;
    padding: 0 20rpx;
    border-radius: 20rpx;
    background: rgba(0,0,0,0.5);
    display: flex;
    justify-content: center;
    align-items: center;
}

.membership-level image {
    width: 26rpx;
    height: 24rpx;
}

.membership-level text {
    margin-left: 4rpx;
    font-size: 24rpx;
}

.membership-editInfo {
    margin-top: 16rpx;
    width: 188rpx;
    height: 34rpx;
    position: relative;
    margin-left: 10rpx;
    display: flex;
    align-items: center;
}

.membership-editInfo image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.membership-editInfo text {
    margin-left: 18rpx;
    color: white;
    font-size: 20rpx;

}

.membership-accessory{
    width: 66rpx;
    height: 40rpx;
    position: absolute;
    top: 80rpx;
    right: 32rpx;
}

.list {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 750rpx;
    background: white;
}
.list-cell {
    box-sizing: border-box;
    height: 100rpx;
    width: 750rpx;
    padding: 0 32rpx;
}

.cell-content {
    border-bottom-style: solid;
    border-bottom-width: 2rpx;
    border-bottom-color: #eee;
    box-sizing: border-box;
    width: 100%;
    height: 100%; 
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 28rpx;
}

.cell-info {
    display: flex;
    align-items: center;
}

.cell-info image {
    max-width: 38rpx;
    max-height: 38rpx;
}

.cell-info text {
    margin-left: 16rpx;
    color: black;
    font-size: 30rpx;
    font-weight: 500;
}

.cell-accessory-icon {
    width: 14rpx;
    height: 24rpx;
}

/* 登录 */
.userInfo-overview {
    width: 750rpx;
    padding: 24rpx 0;
    background: white;
    margin-bottom: 16rpx;

    display: flex;
    align-items: center;
}

.overview {
    display: flex;
    color: black;
    font-weight: 500;
    align-items: center;
    justify-content: center;
    width: 374rpx;
}

.overview-title {
    font-size: 24rpx;
    margin-left: 8rpx;
}

.overview-content {
    font-size: 36rpx;
    margin-left: 16rpx;
}

.v-line {
    width: 4rpx;
    height: 32rpx;
    background: #ccc;
}

.membership-benefit {
    margin-bottom: 16rpx;
    box-sizing: border-box;
    width: 750rpx;
    padding: 32rpx 0 40rpx;
    background: white;
    display: flex;
    flex-direction: column;
}

.benefit-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding-left: 60rpx;
    padding-right: 40rpx;
}

.benefit-top-button {
    box-sizing: border-box;
    width: 160rpx;
    height: 56rpx;
    border-radius: 28rpx;
    border-color: #F21B7B;
    border-width: 2rpx;
    border-style: solid;
    display: flex;
    justify-content: center;
    align-items: center;
    color:#F21B7B;
    font-size: 24rpx;
    font-weight: 500;
}

.benefit-top > text {
    font-weight: 500;
    font-size: 30rpx;
}

.benefit-list {
    margin-top: 40rpx;
    width: 750rpx;
    box-sizing: border-box;
    padding: 0 60rpx;

    display: flex;
    justify-content: space-between;
    flex-flow: row wrap;
}

.benefit-cell {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
    height: 100rpx;
}

.benefit-cell image {
    max-width: 60rpx;
    max-height: 60rpx;
}

.benefit-cell text {
    margin-top: 16rpx;
    font-size: 24rpx;
    font-weight: 500;
}

.overview-icon{
    width:16rpx;
    height:18rpx; 
}
