/* rtmap/coupons/pages/mybonus/mybonus.wxss */

page {
    background: #fff;
}

.mybonus_container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.top {
    height: 102rpx;
    width: 750rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: white;
}

.top-mybonus {
    color: #000;
    font-size: 30rpx;
    margin-right: auto;
    margin-left: 32rpx;
    font-weight: 500;
}

.addUp {
    color: #000;
    font-size: 30rpx;
    margin-right: 32rpx;
    font-weight: 500;
}

.addUp text {
    color: #f21b7b;
}

.line {
    width: 100%;
    height: 16rpx;
    background: #f5f5f5;
}

.list {
    display: flex;
    flex-direction: column;
}

.cell {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: white;
    width: 686rpx;
    height: 162rpx;
    margin: 0 32rpx;
    border-bottom: 2rpx #eee solid;
}

.cell-line {
    width: 100%;
}

.line1 {
    color: #333;
    display: flex;
    justify-content: space-between;
}

.carNo {
    font-size: 36rpx;
    font-weight: 500;
}

.money {
    font-size: 36rpx;
    color: #f21b7b;
    font-weight: 500;
}

.line2 {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
}

.paring-duration {
    display: flex;
    justify-content: flex-end;
}

.line2 text {
    font-size: 30rpx;
    color: #999;
    letter-spacing: 0;
}

.no-records {
    padding: 20rpx;
    color: #000;
    font-size: 30rpx;
    font-weight: 500;
}
