/* rtmap/coupons/pages/userInfo/userInfo.wxss */

.container {
    display: flex;
    width: 750rpx;
    flex-direction: column;
    box-sizing: border-box;
    padding: 10rpx 32rpx;
    background: white;
}

.cell {
    box-sizing: border-box;
    width: 686rpx;
    padding: 8rpx 0;
    margin-top: 22rpx;
    border-bottom: #eee 2rpx solid;

    display: flex;
    align-items: center;
    justify-content: space-between;
}

.name-input-placeholder {
    color: #999;
    font-size: 30rpx;
    line-height: 42rpx;
    font-weight: 500;
}

.cell-title {
    margin-left: 16rpx;
    white-space:nowrap;
}

.cell-info { 
    margin-left: 40rpx;
}

.cell-main {
    display: flex;
    flex:1;
    align-items: center;
}

.cell-prompt {
    margin-right: 16rpx;
}

.upgrade-button {
    margin-top: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #F21B7B;
    color: white;
    font-size: 36rpx;
    font-weight: 400;
    width: 372rpx;
    height: 80rpx;
    border-radius: 40rpx;
}

.cell-accessory-icon {
    width: 14rpx;
    height: 24rpx;
}

.cell-font-normal {
    color: black;
    font-size: 30rpx;
    line-height: 42rpx;
    font-weight: 500;
}

.cell-font-prompt {
    color: #999;
    font-size: 24rpx;
    line-height: 34rpx;
    font-weight: 500;
}

.operation {
    width: 550rpx;
    margin-left: 16rpx;
    box-sizing: border-box;
}


.textarea {
    padding: 2rpx 0 0 0;
}

.ios-textarea {
    padding-top: 2rpx;
    padding-left: 8rpx;
    padding-right: 8rpx;
}