.select {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  background-color: white;
  border-bottom: 2rpx #eee solid;
}

.select-item {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.select-item text {
  font-size: 30rpx;
  margin: 30rpx 0;
  color: black;
}

.select-item .arrow {
  width: 12rpx;
  height: 10rpx;
  margin-left: 8rpx;
}
