/* rtmap/integralMall/integralHistory/integralHistory.wxss */

.history {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 32rpx 32rpx 0 32rpx;
  justify-content: space-between;
  border-bottom: 2rpx #f5f5f5 solid;
  padding-bottom: 32rpx;
}

.item-left {
  display: flex;
  flex-direction: column;
}

.item-left .name {
  color: #000;
  font-size: 30rpx;
}

.item-left .time {
  color: #999;
  font-size: 24rpx;
  margin-top: 32rpx;
}

.item .convert {
  color: #000;
  font-size: 36rpx;
}
