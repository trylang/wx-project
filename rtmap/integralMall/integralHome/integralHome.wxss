/* rtmap/integralMall/integralHome/integralHome.wxss */

.integral {
    width: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.fix-top {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    z-index: 1000;
}

.convert {
    width: 100%;
    height: 152rpx;
    position: relative;
    display: flex;
    border-bottom: 2rpx #f5f5f5 solid;
    background-color: white;
}

.convert-container {
    position: absolute;
    display: table-cell;
    vertical-align: bottom;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    align-items: center;
    justify-content: center;
}

.convert-container image {
    width: 34rpx;
    height: 32rpx;
}

.convert-tx {
    font-size: 30rpx;
    color: black;
}

.convert-txt {
    font-size: 72rpx;
    margin-left: 8rpx;
}

.convert-txtc{
    font-size: 30rpx;
    color: #000;
    font-weight: 500;
}

.hitory {
    position: absolute;
    right: 0;
    top: 50%;
    background-color: rgba(0, 0, 0, 0.05);
    border-top-left-radius: 100rpx;
    border-bottom-left-radius: 100rpx;
    width: 134rpx;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.hitory text {
    font-size: 20rpx;
    color: black;
}

.in-sel {
    width: 100%;
    height: 88rpx;
    background: white;
}

.bottom {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    position: relative;
    margin-top: 244rpx;
}

.bottom .list {
    display: flex;
    flex-flow: row wrap;
}

.list-item {
    width: 374rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-bottom: 2rpx #f5f5f5 solid;
    padding: 48rpx 0 40rpx 0;
}

.list-item image {
    width: 238rpx;
    height: 238rpx;
}

.list-tet {
    margin-top: 32rpx;
    display: flex;
    flex-direction: column;
    margin-left: 40rpx;
    width: 334rpx;
}

.list-intergral {
    margin-top: 8rpx;
    font-size: 24rpx;
    color: #f21b7b;
}

.mask {
    background: rgba(0, 0, 0, 0.5);
    height: 1000px;
    display: flex;
    flex-direction: column;
    margin-top: 2rpx;
}

.mask-list {
    background: white;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 2rpx #f5f5f5 solid;
}

.mask-list text {
    font-size: 30rpx;
}

.no-data{
    margin-top: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.no-data image{
    width: 192rpx;
    height: 262rpx;
}

.no-data text{
    color: #000;
    font-size: 30rpx;
    margin-top: 20rpx;
}
