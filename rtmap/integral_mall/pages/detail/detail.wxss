.body{
	width: 100%;
	background-color:#fff;
	font-family:PingFangSC;
	box-sizing: border-box;
    font-weight: 500;
}
.detailWrapper{
    width: 100%;
    display: block;
    font-size: 24rpx;
    color: #000000;
    padding-bottom: 130rpx;
}
.detailWrapper .banner{
    width: 100%;
    height: 750rpx;
    display: block;
}
.detailWrapper .detailTitle{
    padding: 32rpx;
    display: flex;
}
.detailTitle .leftTitle{
    width: 70%;
}
.detailTitle .mainInfo{
    font-size: 36rpx;
     display: flex; 
}
.detailTitle .iconBtn{
    /* flex: 1;  */
    width: 30%;
    display: inline-block;
    padding-top:3px;
    /* text-align: right; */
}
.detailTitle .iconBtn .collectTion{
    display: inline-block;
    text-align: center;
    width: 50%;
}
.detailTitle .iconBtn .collectTion text{
    margin-top: 7rpx;
    display: block;
}
.detailTitle .iconBtn image{
    width: 36rpx;
    height: 36rpx;
    display: block;
    margin-bottom: 7rpx;
    margin: 0 auto;
}
.detailTitle .iconBtn .share {
    width: 70rpx;
    height: 36rpx;
    background: none;
    display: block;
    line-height: 36rpx;
    margin: 0 0 8rpx 15rpx;
}
.detailTitle .iconBtn .share::after {
    border: 0rpx;
}
.detailTitle .extendInfo{
    color: #999999;
    font-size: 24rpx;
    margin: 8rpx 0 18rpx 0;
}
.detailTitle .limit text{
    height: 28rpx;
    font-size: 20rpx;
    font-family: PingFangSC-Medium;
    color: #F21B7B;
    line-height: 28rpx;
    border: 1rpx solid #F21B7B;
    padding: 2rpx 6rpx;
}
.detailWrapper .back{
    background: #eee;
    width: 100%;
    height: 16rpx;
}
.detailWrapper .title{
    font-size: 30rpx;
    color: #999999;
    margin-bottom: 16rpx;
}
.detailWrapper .exchangeNote{
    padding: 32rpx;
}
.detailWrapper .exchangeNote .imgList{
    width: 100%;
    display: flex;
    justify-content : flex-start;
    flex-wrap: wrap;
}
.detailWrapper .exchangeNote .imgList .imgItem{
    width: 216rpx;
    height: 180rpx;
    border: 1rpx solid #eee;
    box-sizing: border-box;
    margin: 0 18rpx 20rpx 0;
}
.detailWrapper .exchangeNote .imgList .imgItem:nth-of-type(3n){
    margin-right: 0;
}
.detailWrapper .exchangeNote .imgList .imgItem image{
    width: 216rpx;
    height: 128rpx;
    display: block;
}
.detailWrapper .exchangeNote .imgList .imgItem text{
    width: 216rpx;
    height: 52rpx;
    line-height: 52rpx;
    padding-left: 20rpx;
    font-size: 20rpx;
    color: #000000;
}
.detailWrapper .useKnow{
    padding: 32rpx;
}
.detailWrapper .useKnow .desc{
    color: #000000;
    font-size: 24rpx;
}
.detailWrapper .imgTxtBox{
    padding: 32rpx;
}
.detailWrapper .imgTxtBox .message_content {
    white-space: pre-wrap;
    margin-top: 40rpx;
    font-size: 28rpx;
    color: #000000;
}
.descClauseImg {
    width: 100%;
    margin: 0px auto;
}
.detailWrapper .btnStyle {
    position: fixed;
    left: 100rpx;
    bottom: 56rpx;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    z-index: 10;
    width: 550rpx;
}
.paymsg {
    width: 310rpx;
    height: 100%;
    background: black;
    border-top-left-radius: 50rpx;
    border-bottom-left-radius: 50rpx;
    color: #fff;
    padding: 0 8rpx 0 50rpx;
}
.paymsg text{
    font-size: 36rpx;
    text-indent: 50rpx;
}
.paymsg text:nth-of-type(2){
    font-size: 24rpx;
    text-decoration: line-through;
}
.payBtn{
    width: 240rpx; 
    height: 100%;
    background: #F21B7B;
    display: block;
    color: #fff;
    font-size: 36rpx;
    border-top-right-radius: 50rpx;
    border-bottom-right-radius: 50rpx;
    box-sizing: border-box;
    text-align: center;
}
.gray{
    background: #eee;
}

.mask {
  position: fixed;
  z-index: 100;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}
.burial {
  position: fixed;
  z-index: 500;
  width: 600rpx;
  height:432rpx;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 10px;
}

.burial-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 80rpx 0;
  position: relative;
}
.burial-title .diaImg{
    position: absolute;
    top: -150rpx;
    left: 200rpx;
    width: 193rpx;
    height: 264rpx;
    display: block;
}
.burial-title .showText{
    margin-top: 100rpx;
    font-weight: 500;
    font-size: 36rpx;
}
.burial-title .title {
    color: #333;
    font-size: 36rpx;
    font-weight: 500;

}

.burial-title .content {
    color: #333;
    font-size: 30rpx;
    margin-top: 8rpx;
    font-weight: 500;
}
.btnrow {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 480rpx;
    margin-top: 80rpx;
    justify-content: space-between;
}

.cancle {
    width: 200rpx;
    height: 72rpx;
    border: 2rpx #f21b7b solid;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #f21b7b;
    font-size: 30rpx;
    font-weight: 500;
}

.btnrow .ok {
    width: 200rpx;
    height: 72rpx;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f21b7b;
    color: #fff;
    font-size: 30rpx;
    font-weight: 500;
}
.go-home {
    position: fixed;
    right: 15rpx;
    top: 60%;
    width: 100rpx;
    height: 103rpx;
}

.go-home-hide {
    position: fixed;
    right: 0;
    top: 60%;
    transform: translate(50%, 0);
    width: 100rpx;
    height: 103rpx;
    opacity: 0.5;
}

@keyframes dialogSlipToUp {
    0% {
        top: 100%;
        opacity: 0.3;
    }

    100% {
        top: 88%;
        opacity: 1;
    }
}

.show {
    visibility: visible;
    animation: dialogSlipToUp 0.3s linear both;
}
