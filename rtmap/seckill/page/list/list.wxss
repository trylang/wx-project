}

.coupon-kill-button {
    color: white;
    font-size: 30rpx;
    font-weight: 500;
    text-align: center;
    display: inline-block;
    border:0rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0rpx 40rpx;
    border-radius: 25rpx;
    color: black;
    background-color: #f8c71d;
    box-sizing: border-box;
}
.coupon-kill-button::after{ border: none; }

.coupon-kill-button.none {
