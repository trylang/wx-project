/**index.wxss**/

/***顶部切换选项卡***/
.header_c{
    height: 120rpx;
    width:100%;
    white-space: nowrap;
    position: fixed;
    top:0rpx;
    left:0rpx;
    background-color: #f8c71d;
}
.header {
    height: 120rpx;
    z-index: 100;
    white-space: nowrap;
    position: absolute;
}

.h_n_after {
    content: "";
    display: block;
    position: absolute;
    height: 0rpx;
    width: 0rpx;
    bottom: 0;
    border-top: 0rpx;
    border-bottom: 14rpx solid white;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    transition: left 0.5s;
    margin-left: -10rpx;
}
.header_navc{
    display: inline-block;
    height: 100%;
}
.header_nav {
    height: 100%;
    width:20%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.h_n_title {
    font-size: 36rpx;
    color: rgba(0, 0, 0, 0.5);
}

.h_n_status {
    font-size: 24rpx;
    color: rgba(0, 0, 0, 0.5);
}

.h_n_status image {
    width: 10rpx;
    height: 20rpx;
}

.header_nav_active .h_n_title, .header_nav_active  .h_n_status {
    color: black;
}

/***内容区域***/

.swiper_list {
    position: relative;
    height: 500rpx;
}
/*********专场商品***********/
