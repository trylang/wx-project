/*复制的代码*/

.coupons-list {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 130rpx;
}

.coupons-list-cell {
    position: relative;
    display: flex;
    width: 710rpx;
    height: 220rpx;
    background: #f8f8f8;
    margin-top: 16rpx;
    align-items: center;
    overflow: hidden;
}

.coupon-image {
    position: relative;
    width: 220rpx;
    height: 220rpx;
}

.coupon-icon {
    width: 220rpx;
    height: 220rpx;
}

.fourCircle {
    position: absolute;
    right: 0;
    top: 0;
    width: 50rpx;
    height: 40rpx;
    border-radius: 0 0 0 35rpx;
    background: #f8c71d;
    line-height:24rpx;
    text-indent:14rpx;
}

.fourCircle text {
    color: #000;
    font-size: 20rpx;
    padding: 7rpx 8rpx 0 0;
}

.coupon-info {
    position: absolute;
    right: 0;
    width: 490rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 100%;
}

.coupon-info-titles {
    display: flex;
    margin-top:10rpx;
    height: 90%;
    flex-direction: column;
    justify-content:space-around;
    overflow: hidden;
    margin-left: 16rpx;
    margin-right: 32rpx;
}

.coupon-info-title {
    font-weight: 500;
    font-size: 30rpx;
    color: black;
    line-height: 38rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.coupon-info-description {
    font-size: 24rpx;
    color: #666;
    line-height: 32rpx;
}

